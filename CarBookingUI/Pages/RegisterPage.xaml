<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarBookingUI.Pages.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="SurnameEntry" Placeholder="Surname" />
        <Entry x:Name="PhoneEntry" Placeholder="Phone" TextChanged="OnPhoneEntryTextChanged" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" TextChanged="OnEmailEntryTextChanged" />
        <DatePicker x:Name="DateOfBirthPicker" />
        <Entry x:Name="LoginEntry" Placeholder="Login" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Register" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
