<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarBookingUI.Pages.LoginPage"
             Title="LoginPage">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Login" x:Name="LoginEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Button Text="Login" Clicked="OnLoginButtonClicked" />
        <Button Text="Register" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>